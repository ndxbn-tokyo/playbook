root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = tab
insert_final_newline = true
trim_trailing_whitespace = true

# main files for playbook
[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{sh,bash,zsh}]
# nothing

[{*.rb,Vagrantfile,Rakefile,Gemfile}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
